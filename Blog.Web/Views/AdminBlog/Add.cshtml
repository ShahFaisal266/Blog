@model Blog.Web.Models.ViewModels.AddBlogRequest

@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>
            Add New BLog -Admin Funtionality
        </h1>

    </div>
    <div class="container py-8">
        <form method="post">
            <div class="mb-3">
                <label class="form-label">Heading</label>
                <input type="text" class="form-control" id="name" placeholder="Heading" asp-for="Heading" />
            </div>

            <div class="mb-3">
                <label class="form-label">Page Title</label>
                <input type="text" class="form-control" id="displayName" placeholder="PageTitle" asp-for="PageTitle" />
            </div>
             <div class="mb-3">
                <label class="form-label">Author</label>
                <input type="text" class="form-control" id="displayName" placeholder="Author" asp-for="Author" />
            </div>
             <div class="mb-3">
                <label class="form-label">Content</label>
                <input type="text" class="form-control" id="displayName" placeholder="Content" asp-for="Content" />
            </div>
            <div class="mb-3">
                <label class="form-label">Short Description</label>
                <input type="text" class="form-control" id="displayName" placeholder="shortDescription" asp-for="shortDescription" />
            </div>
            <div class="mb-3">
                <label class="form-label">Published Date</label>
                <input type="date" class="form-control" id="displayName" placeholder="PublishedDate" asp-for="PublishedDate" />
            </div>
            <div class="mb-3">
                <label class="form-label">Featured Image URl</label>
                <input type="text" class="form-control" id="displayName" placeholder="FeaturedImageURl" asp-for="FeaturedImageURl" />
            </div>
            <div class="mb-3">
                <label class="form-label">Url Handle</label>
                <input type="text" class="form-control" id="displayName" placeholder="UrlHandle" asp-for="UrlHandle" />
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-dark">
                    Submit
                </button>
            </div>

        </form>

    </div>

</div>
